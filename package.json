{
  "devDependencies": {
    "@shoelace-style/shoelace": "^2.20.0",
    "esbuild": "0.25.2",
    "http-server": "^14.1.1",
    "smplr": "^0.16.1"
  },
  "scripts": {
    "build:dev": "esbuild js/main.js --bundle --sourcemap --outfile=js/bundle.js && esbuild css/main.css --bundle --sourcemap --outfile=css/bundle.css",
    "build": "esbuild js/main.js --bundle --minify --outfile=js/bundle.js && esbuild css/main.css --bundle --minify --outfile=css/bundle.css",
    "local": "http-server --port 8000 -o -c-1"
  }
}
